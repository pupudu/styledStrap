{
  "name": "stylestrap",
  "version": "0.1.2-rc.0",
  "description": "Bootstrap based components library built using styled components",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "start": "docz dev",
    "docz:build": "docz build",
    "build": "STYLED_ENGINE=styled-components BABEL_ENV=rollup rollup -c",
    "lint": "eslint --fix src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pupudu/stylestrap.git"
  },
  "keywords": [
    "bootstrap",
    "react",
    "styled",
    "components"
  ],
  "author": "Pubudu Dodangoda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pupudu/stylestrap/issues"
  },
  "homepage": "https://github.com/pupudu/stylestrap#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "bootstrap": "^4.1.3",
    "docz": "^0.13.7",
    "docz-plugin-css": "^0.11.0",
    "docz-theme-default": "^0.12.5",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "polished": "^2.3.0",
    "prettier": "^1.14.2",
    "prop-types": "^15.6.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-select": "^2.4.0",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.0",
    "styled-components": "^4.1.2"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "bootstrap": ">= 4",
    "polished": ">= 2",
    "prop-types": ">= 15",
    "react": ">= 16",
    "react-dom": ">= 16",
    "react-select": ">= 2",
    "styled-components": ">= 4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "yarn lint",
      "git add"
    ]
  }
}
